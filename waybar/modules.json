{
  "hyprland/workspaces": {
    "format": "{name}: {icon}",
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "persistent-workspaces": {
      "*": 3
    },
    "format-icons": {
      "urgent": "ïª",
      "active": "ï†’",
      "default": "ï„‘"
    }
